{
  "name": "averill-app",
  "version": "1.0.0",
  "author": "averill co",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "lerna run start --stream",
    "start:app": "yarn --cwd packages/averill-client start",
    "start:server": "yarn --cwd packages/averill-server start",
    "test": "jest",
    "bundle": "lerna run bundle --stream",
    "format": "eslint . --ext .js,.jsx,.ts,.tsx --fix && prettier \"**/*.+(js|jsx|ts|tsx|json)\" --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "autoprefixer": "^10.3.7",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.3.0",
    "css-minimizer-webpack-plugin": "^3.1.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "file-loader": "^6.2.0",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.0.2",
    "mini-css-extract-plugin": "^2.3.0",
    "msw": "^0.35.0",
    "postcss-cli": "^9.0.1",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.4.1",
    "react-refresh": "^0.11.0",
    "tailwindcss": "^2.2.16",
    "terser-webpack-plugin": "^5.2.4",
    "webpack": "^5.55.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-merge": "^5.8.0",
    "whatwg-fetch": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
